{
  "name": "@flypeng/lint-config-monorepo",
  "version": "0.0.13",
  "private": true,
  "packageManager": "pnpm@7.18.0",
  "author": "flylingYP <flingyp@163.com> (https://github.com/flingyp/)",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . && stylelint \"**/*.{css,scss,less}\"",
    "lint:fix": "eslint . --fix && stylelint \"**/*.{css,scss,less}\" --fix",
    "test": "pnpm -r run test",
    "prepare": "pnpm -r run stub",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@flypeng/eslint-config": "workspace:^",
    "@flypeng/stylelint-config": "workspace:^",
    "bumpp": "^9.2.0",
    "eslint": "^8.48.0",
    "rimraf": "^4.4.1",
    "stylelint": "^15.10.3",
    "typescript": "^4.9.5",
    "vue": "^3.3.4"
  }
}
